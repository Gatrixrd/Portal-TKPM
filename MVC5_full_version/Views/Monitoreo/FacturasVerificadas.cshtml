<script type="text/javascript">
 var url_dir = '@System.Configuration.ConfigurationManager.AppSettings["dirImagenTMS"].ToString()';
 $(document).ready(function () {
  var url_dir = '@System.Configuration.ConfigurationManager.AppSettings["dirImagenTMS"].ToString()';
  cargaSociedades();
  ConfiguraCalendarios();
