  });

  var now = new Date();
  var day = ('0' + now.getDate()).slice(-2);
  var month = ('0' + (now.getMonth() + 1)).slice(-2);

  var inicial = '01/' + month + '/' + now.getFullYear();
  var final = (day)+'/'+(month)+'/'+now.getFullYear() ;

  $('#start').val(inicial);
  $('#end').val(final);
