<!DOCTYPE html>
<html>
<head>
 <meta charset="utf-8" />
 <meta name="viewport" content="width=device-width, initial-scale=1.0">
 <title>NeuBoard | @ViewBag.Title</title>

 @if (IsSectionDefined("Styles"))
    {@RenderSection("Styles", required: false)}
                                              
    @*<link href='http://fonts.googleapis.com/css?family=Montserrat:400,700' rel='stylesheet' type='text/css'>
          <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,600,700,800' rel='stylesheet' type='text/css'>*@
    <link href='~/fonts/montserrat.css' rel='stylesheet' type='text/css'>
    <link href='~/fonts/opensans.css' rel='stylesheet' type='text/css'>
 @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")


    <!-- Librerias requeridas agredagadas por ARM GRD 5 Mayo 2017 -->
 @Scripts.Render("~/bundles/jquery")
    <!--@Scripts.Render("~/bundles/Fechas")-->
 @Styles.Render("~/Content/bafar/jquery-ui-CSS")
    @Styles.Render("~/Content/kendo/css")


    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
 <!--[if lt IE 9]>
     @Scripts.Render("~/bundles/ie")
     <![endif]-->

</head>
<body>
    <!-- Page Wrapper-->
    <section id="main-wrapper" class="theme-default">

        <!-- Top Header -->
        @Html.Partial("_Header")

        <!-- Left Sidebar Navigation -->
        @Html.Partial("_LeftSideBar", MVC5_full_version.Helpers.SessionHelper.ObtenerMenu())

        <!-- Content wraper -->
        <section class="main-content-wrapper">
            <!-- Main view  -->
            @RenderBody()
        </section>
        <!-- /Content wraper-->

    </section><!-- /Page Wrapper-->
    <!-- Right Sidebar -->
    @Html.Partial("_RightSideBar")

    <!--Theme Config -->
    @Html.Partial("_Config")



    @Scripts.Render("~/plugins/navgoco")
    @Scripts.Render("~/plugins/pace")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/bundles/appBafar")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/plugins/navgoco")
    @Scripts.Render("~/plugins/pace")
    @Scripts.Render("~/plugins/switchery")
    @Scripts.Render("~/bundles/app")

 
     <!-- Scripts adicionales requeridos definidos por ARM GRD Mayo 2017 -->
     @Scripts.Render("~/bundles/kendo")
     @Scripts.Render("~/bundles/session")
    @Scripts.Render("~/bundles/Monedas")
    @Scripts.Render("~/bundles/blockUI")
    @Scripts.Render("~/plugins/wizard")
    @Scripts.Render("~/plugins/dropzone")
    @Scripts.Render("~/Content/css")

    @RenderSection("scripts", required: false)

</body>
</html>
